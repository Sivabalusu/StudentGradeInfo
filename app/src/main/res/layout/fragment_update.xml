<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateFragment">

    <!-- TODO: fragment layout used to Update record-->
    <LinearLayout
        android:id="@+id/updateLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUPHeader"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Enter Student ID to Update"
                    android:textColor="#1a1a1a"
                    android:textSize="20sp">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvUpId"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="left"
                        android:text="Enter ID"
                        android:textColor="#1a1a1a"
                        android:textSize="20sp">

                    </TextView>

                    <EditText
                        android:id="@+id/etUpId"
                        android:layout_width="198dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:hint="ID">

                    </EditText>

                </LinearLayout>

                <Button
                    android:id="@+id/btnGet"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="#33cc33"
                    android:text="Get Data"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp"
            android:id="@+id/UpData"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/UpData1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvUPedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Edit the corresonding column/s to update"
                    android:textColor="#1a1a1a"
                    android:textSize="18sp">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFirstName"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="left"
                        android:text="First Name"
                        android:textColor="#1a1a1a"
                        android:textSize="18sp">

                    </TextView>

                    <EditText
                        android:id="@+id/etFirstName"
                        android:layout_width="198dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:hint="First Name">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLastName"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="left"
                        android:text="Last Name"
                        android:textColor="#1a1a1a"
                        android:textSize="18sp">

                    </TextView>

                    <EditText
                        android:id="@+id/etLastName"
                        android:layout_width="198dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:hint="Last Name">

                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMarks"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="left"
                        android:text="Marks"
                        android:textColor="#1a1a1a"
                        android:textSize="18sp">

                    </TextView>

                    <EditText
                        android:id="@+id/etMarks"
                        android:layout_width="198dp"
                        android:layout_height="59dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:hint="Marks">

                    </EditText>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvSelect"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:gravity="left"
                            android:text="Selected Program"
                            android:textColor="#1a1a1a"
                            android:textSize="16sp"
                            android:visibility="invisible">

                        </TextView>

                        <TextView
                            android:id="@+id/etSelect"
                            android:layout_width="198dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:hint="Marks"
                            android:textSize="16sp"
                            android:visibility="invisible">

                        </TextView>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvprog"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="20dp"
                            android:gravity="left"
                            android:text="Update Program"
                            android:textColor="#1a1a1a"
                            android:textSize="16sp">

                        </TextView>

                        <ListView
                            android:id="@+id/lvUPProgList"
                            android:layout_width="190dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:listSelector="@color/green"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCredi"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:gravity="left"
                        android:text="Credits"
                        android:textColor="#1a1a1a"
                        android:textSize="20sp">

                    </TextView>

                    <RadioGroup
                        android:id="@+id/rgCredits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radCredit1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="2dp"
                            android:text="1"
                            android:textSize="18sp"

                            >

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/radCredit2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="2dp"
                            android:text="2"
                            android:textSize="18sp">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/radCredit3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="2dp"
                            android:text="3"
                            android:textSize="18sp">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/radCredit4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="2dp"
                            android:text="4"
                            android:textSize="18sp">

                        </RadioButton>
                    </RadioGroup>
                </LinearLayout>

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#33cc33"
                    android:text="UPDATE"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold">

                </Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>