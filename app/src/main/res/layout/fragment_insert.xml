<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InsertFragment">

    <!-- TODO: Fragment layout used to insert record-->

    <LinearLayout
        android:id="@+id/insertLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="650dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeader"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Enter Student Details"
                    android:textColor="#1a1a1a"
                    android:textSize="24sp">

                </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:gravity="left"
                    android:text="First Name"
                    android:textColor="#1a1a1a"
                    android:textSize="20sp"
                    android:id="@+id/tvFirstName">

                </TextView>

                <EditText
                    android:layout_width="198dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:hint="First Name"
                    android:id="@+id/etFirstName">

                </EditText>

            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="left"
                        android:text="Last Name"
                        android:textColor="#1a1a1a"
                        android:textSize="20sp"
                        android:id="@+id/tvLastName">

                    </TextView>

                    <EditText
                        android:layout_width="198dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:hint="Last Name"
                        android:id="@+id/etLastName">

                    </EditText>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="left"
                        android:text="Marks"
                        android:textColor="#1a1a1a"
                        android:textSize="20sp"
                        android:id="@+id/tvMarks">

                    </TextView>

                    <EditText
                        android:layout_width="198dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:hint="Marks"
                        android:id="@+id/etMarks">

                    </EditText>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvListView"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="Choose the Program"
                    android:textColor="#1a1a1a"
                    android:textSize="22sp">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ListView
                    android:id="@+id/lvProgList"
                    android:layout_width="300dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:listSelector="@color/green"
                    />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:gravity="left"
                            android:text="Selected Course"
                            android:textColor="#1a1a1a"
                            android:visibility="invisible"
                            android:textSize="15sp"
                            android:id="@+id/tvSelect">

                        </TextView>

                        <TextView
                            android:layout_width="198dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:visibility="invisible"
                            android:id="@+id/etSelect">

                        </TextView>

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvCredits"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="Credits Achieved"
                    android:textColor="#1a1a1a"
                    android:textSize="22sp">

                </TextView>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rgCredits"
                   android:orientation="horizontal"
                    android:layout_marginLeft="50dp"
                    >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radCredit1"
                    android:text="1"
                    android:textSize="24sp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"

                    >

                </RadioButton>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radCredit2"
                    android:text="2"
                    android:textSize="24sp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"

                    >
                </RadioButton>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radCredit3"
                        android:text="3"
                        android:textSize="24sp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"

                        >
                    </RadioButton>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radCredit4"
                        android:text="4"
                        android:textSize="24sp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"

                        >
                    </RadioButton>
                </RadioGroup>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#33cc33"
                    android:text="SUBMIT"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp">

                </Button>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>